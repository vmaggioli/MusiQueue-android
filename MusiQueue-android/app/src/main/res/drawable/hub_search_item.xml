    <item
        android:top="5dp"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="#cccccc" />
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>